<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".body.features.water_intake.StatisticFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/icon_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="37sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintStart_toEndOf="@id/iv_back"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_graph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_borders"
        app:layout_constraintTop_toBottomOf="@id/tv_statistic"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chart chart "
            android:textSize="50sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_average_volume"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_borders"
        app:layout_constraintTop_toBottomOf="@id/layout_graph"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_average_volume"
            android:layout_width="190sp"
            android:layout_height="match_parent"
            android:text="Average Volume"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="180sp"
            android:layout_height="match_parent"
            android:text="100 oz"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:paddingStart="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_average_volume" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_average_completion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_borders"
        app:layout_constraintTop_toBottomOf="@id/layout_average_volume"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_average_completion"
            android:layout_width="190sp"
            android:layout_height="match_parent"
            android:text="Average Completion"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="180sp"
            android:layout_height="match_parent"
            android:text="70 %"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:paddingStart="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_average_completion" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_drink_frequency"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_borders"
        app:layout_constraintTop_toBottomOf="@id/layout_average_completion"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        android:elevation="5dp">

        <TextView
            android:id="@+id/tv_drink_frequency"
            android:layout_width="190sp"
            android:layout_height="match_parent"
            android:text="Drink Ferquency"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="180sp"
            android:layout_height="match_parent"
            android:text="6 times / day"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:paddingStart="10dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_drink_frequency" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_care_crafter_web"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Go to CareCrafter Wev ->"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>