<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".body.features.step_tracker.HomeStepTrackerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:src="@drawable/icon_back"
            android:layout_marginRight="20dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Step Tracker"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_circle_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="60dp"
            android:text="Daily Goal"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="128dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="168dp"
            android:layout_marginTop="128dp"
            android:text="/ Total Steps"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_goal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter Goal"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/setgoal"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Set Goal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/bt_start"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_stop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_reset"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step History"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

        <ListView
            android:id="@+id/listViewStepHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />


    </LinearLayout>

</LinearLayout>
