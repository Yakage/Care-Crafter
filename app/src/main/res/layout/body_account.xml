<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".body.AccountFragment">

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="37sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_account"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Change your Personal Details"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_account"
            app:layout_constraintStart_toEndOf="@id/iv_account"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_units"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_account"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_units"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_units"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_units"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Units"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_units"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Currently in use lbs, ft oz"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_units"
            app:layout_constraintStart_toEndOf="@id/iv_units"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_widgets"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_units"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_widgets"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_widgets"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_widgets"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Widgets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_widgets"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Customize widgets appearance"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_widgets"
            app:layout_constraintStart_toEndOf="@id/iv_widgets"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_theme"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_widgets"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_theme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_theme"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_theme"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Set up your theme"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_theme"
            app:layout_constraintStart_toEndOf="@id/iv_theme"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_log_out"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_theme"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/iv_log_out"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_log_out"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_log_out"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_log_out"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Log out of your account"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_log_out"
            app:layout_constraintStart_toEndOf="@id/iv_log_out"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>