<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".body.features.Calcu.BmiCalcuHome"
    android:background="@drawable/border_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="CareCrafter"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginLeft="10dp"
                android:text="BMI Calculator"
                android:textStyle="bold"
                android:textColor="@color/blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body mass index (BMI) is a measure of body fat based on height and weight that applies to adult men and women"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/maleIcon"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/image_selector"
                android:contentDescription="Male Icon"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/femaleIcon"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/image_selector2"
                android:layout_weight="1"
                android:contentDescription="Female Icon"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/height"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/etHeightCalcu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="20sp"
                android:hint="cm (ex. 1ft = 30.48)"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/weight"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/etWeightCalcu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="20sp"
                android:hint="kg (ex. 2.2lbs = 1kg)"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalcu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate your BMI"
            android:backgroundTint="@color/blue"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvCalcuResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result Placeholder"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</ScrollView>