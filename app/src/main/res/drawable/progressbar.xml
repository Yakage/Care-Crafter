<!-- res/drawable/progress_bar_segmented.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/underweight">
        <shape android:shape="rectangle">
            <solid android:color="#606060" />
        </shape>
    </item>
    <!-- Green segment -->
    <item android:id="@+id/normal">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" />
        </shape>
    </item>
    <!-- Yellow segment -->
    <item android:id="@+id/overweight">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" />
        </shape>
    </item>
    <!-- Red segment -->
    <item android:id="@+id/obese">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
        </shape>
    </item>
</layer-list>
